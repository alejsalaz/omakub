# Enable colored prompt
force_color_prompt=yes

# Colors (define these colors beforehand)
CYAN='\[\033[0;36m\]'
PURPLE='\[\033[0;35m\]'
WHITE='\[\033[1;37m\]'
RESET='\[\033[0m\]'

# Function to get the current Git branch
git_branch() {
  branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
  if [ -n "$branch" ]; then
    echo " ($branch)"
  fi
}

# Customized prompt with Git branch
PS1="${CYAN} \u${PURPLE}@\h${RESET} ${WHITE} \w\$(git_branch) ${RESET}➜ "
